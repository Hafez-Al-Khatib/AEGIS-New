# ============================================================================
# AEGIS Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your values
# ============================================================================

# ----------------------------------------------------------------------------
# Database Configuration
# ----------------------------------------------------------------------------
POSTGRES_USER=aegis
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=aegis

# For local development (SQLite fallback)
# DATABASE_URL=sqlite:///./aegis.db

# ----------------------------------------------------------------------------
# InfluxDB (Time-Series Vitals Storage)
# ----------------------------------------------------------------------------
INFLUX_USER=aegis
INFLUX_PASSWORD=your_influx_password
INFLUX_ORG=aegis_org
INFLUX_BUCKET=vitals
INFLUX_TOKEN=your_influx_token_here

# For local development
INFLUX_URL=http://localhost:8086

# ----------------------------------------------------------------------------
# Security
# ----------------------------------------------------------------------------
SECRET_KEY=your_jwt_secret_key_change_in_production

# ----------------------------------------------------------------------------
# LLM Configuration
# ----------------------------------------------------------------------------
# Primary: Qwen 2.5 7B (local, privacy-preserving)
# Beta: Gemini 2.0 Flash (cloud, faster)

LLM_PROVIDER=qwen
USE_GEMINI_BETA=false

# Path to Qwen model (for local deployment)
QWEN_MODEL_PATH=agents/models/qwen2.5-7b-instruct-q8_0-00001-of-00003.gguf

# Gemini API Key (only needed if USE_GEMINI_BETA=true)
GOOGLE_API_KEY=your_google_api_key_here

# ----------------------------------------------------------------------------
# Twilio (Emergency Calls, SMS & WhatsApp)
# ----------------------------------------------------------------------------
# Get these from https://console.twilio.com
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# WhatsApp Business API (for appointment booking)
# Use Twilio Sandbox number for testing: whatsapp:+14155238886
# Or your own WhatsApp Business number
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Base URL for Twilio webhooks (use ngrok for local development)
# Configure in Twilio Console:
#   - Voice webhook: {AEGIS_BASE_URL}/voice/booking
#   - WhatsApp webhook: {AEGIS_BASE_URL}/whatsapp/webhook
AEGIS_BASE_URL=https://your-ngrok-url.ngrok.io

# ----------------------------------------------------------------------------
# Health Connect (Galaxy Watch Integration)
# ----------------------------------------------------------------------------
HEALTH_CONNECT_API_KEY=aegis-health-key
HEALTH_CONNECT_USER_ID=2

# ----------------------------------------------------------------------------
# Google Services
# ----------------------------------------------------------------------------
# Google Maps API (for location services)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Google Calendar (OAuth credentials JSON path)
GOOGLE_CALENDAR_CREDENTIALS=credentials.json

# ----------------------------------------------------------------------------
# Habitica (Gamification)
# ----------------------------------------------------------------------------
# Get from https://habitica.com/user/settings/api
HABITICA_USER_ID=your_habitica_user_id
HABITICA_API_TOKEN=your_habitica_api_token

# ----------------------------------------------------------------------------
# Frontend
# ----------------------------------------------------------------------------
VITE_API_URL=http://localhost:8000

# ----------------------------------------------------------------------------
# Development/Testing
# ----------------------------------------------------------------------------
# Vitals simulation interval (seconds)
SIMULATION_INTERVAL=30

# Enable debug logging
DEBUG=false

# ----------------------------------------------------------------------------
# Agent Configuration
# ----------------------------------------------------------------------------
# Sliding window for conversation history (prevents context overflow)
AEGIS_MAX_WINDOW_SIZE=20
AEGIS_PRESERVE_RECENT=6
AEGIS_SUMMARIZE_OLD=false
